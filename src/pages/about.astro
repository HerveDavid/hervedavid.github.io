---
import Layout from '../layouts/BlogPost.astro';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<style>

		img {
		  max-width: 30%;
		  height: auto;
			margin-right: 2em;
			border-radius: 12px;
		}


	</style>

	<body>
		<Header />
		<main style={{ 'margin-top': 0 }}>
			<h1>About</h1>
			<div style={{ display: 'inline-flex', 'align-items': 'start' }}>
				<img width={1020} height={510} src="/profil.jpg" alt="profil image" />
				<div style={{ display: 'block' }}>
					<p style={{ margin: 0 }}>
						I'm David Herve, a programmer who likes things simple.
						Learning programming languages allows me to build systems in the most beautiful way possible, and that's what this site is all about.
						You can find me on GitHub or Linkedin. 
						If you want to find me in real life, I'm in Lyon. 
					</p>
					<p>
						All code from the blog is available under MIT or Apache-2.0 licences.
					</p>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

